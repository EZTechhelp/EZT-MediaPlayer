<TabItem
 Header="Youtube Browser"
         BorderBrush="gray"
         Visibility="Visible"
         Name="Youtube_Tabitem"
         IsEnabled="true"
>
	<Grid Background="black" VerticalAlignment="stretch" HorizontalAlignment="stretch" Opacity="1" Margin="0,0,0,0">
		<mah:ProgressRing Foreground="White" Name='Youtube_Progress_Ring' IsActive="false" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center" Panel.ZIndex="2"/>
		<DataGrid Name="YoutubeTable" Margin="5,36,5,15" VerticalAlignment="Top" HorizontalAlignment="stretch" Opacity="1" SelectionUnit="FullRow" SelectionMode="Extended" AreRowDetailsFrozen="True" ScrollViewer.CanContentScroll="false" ItemsSource="{Binding View, IsAsync=True}" EnableRowVirtualization="True" EnableColumnVirtualization="True" PresentationOptions:Freeze="True" MaxHeight="1600" MaxWidth="2560" VirtualizingStackPanel.ScrollUnit="Pixel" VirtualizingPanel.IsVirtualizingWhenGrouping="True" VirtualizingPanel.VirtualizationMode="Standard" AllowDrop="true">
			<!--             <DataGrid.GroupStyle>
                <GroupStyle ContainerStyle="{StaticResource MahApps.Styles.GroupItem.DataGrid}">
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center" FontWeight="Bold" FontSize="14">
                                <TextBlock.Text>
                                        <Binding Mode="OneWay" Path="Name" />
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </DataGrid.GroupStyle> -->
			<DataGrid.Resources>
				<Style TargetType="ScrollViewer">
					<Setter Property="AttachedBehavior:ScrollAnimationBehavior.IsEnabled" Value="True"/>
					<Setter Property="AttachedBehavior:ScrollAnimationBehavior.TimeDuration" Value="00:00:00.30"/>
					<Setter Property="AttachedBehavior:ScrollAnimationBehavior.PointsToScroll" Value="35"/>
				</Style>
			</DataGrid.Resources>
			<DataGrid.CellStyle>
				<Style TargetType="DataGridCell">
					<Style.Triggers>
						<Trigger Property="IsSelected"
						         Value="True">
							<Setter Property="Background" Value="{StaticResource MahApps.Brushes.Accent}"/>
							<Setter Property="BorderThickness" Value="0"/>
							<Setter Property="Foreground" Value="{StaticResource MahApps.Brushes.IdealForeground}"/>
							<Setter Property="BorderBrush" Value="Transparent"/>
						</Trigger>
					</Style.Triggers>
				</Style>
			</DataGrid.CellStyle>
			<DataGrid.RowStyle>
				<Style TargetType="DataGridRow">
					<Style.Triggers>
						<Trigger Property="IsSelected"
						         Value="True">
							<Setter Property="Background" Value="{StaticResource MahApps.Brushes.Accent}"/>
							<Setter Property="BorderThickness" Value="0"/>
							<Setter Property="Foreground" Value="{StaticResource MahApps.Brushes.IdealForeground}"/>
							<Setter Property="BorderBrush" Value="Transparent"/>
						</Trigger>
					</Style.Triggers>
				</Style>
			</DataGrid.RowStyle>
			<DataGrid.GroupStyle>
				<GroupStyle>
					<GroupStyle.ContainerStyle>
						<Style TargetType="{x:Type GroupItem}">
							<Setter Property="Template">
								<Setter.Value>
									<ControlTemplate>
										<Expander IsExpanded="True" BorderThickness="0,0,0,1" Margin="0,5,0,5" Foreground="White" mah:HeaderedControlHelper.HeaderFontWeight="Bold" mah:HeaderedControlHelper.HeaderBackground="Black" mah:HeaderedControlHelper.HeaderForeground="LightGray" mah:HeaderedControlHelper.HeaderFontSize="14" Header="{Binding Path=Name}" Uid="{Binding}" Name="YoutubeTable_Expander" ExpandDirection="Down" ScrollViewer.CanContentScroll="false" VirtualizingPanel.IsVirtualizingWhenGrouping="True" VirtualizingPanel.VirtualizationMode="Standard" PresentationOptions:Freeze="True" Style="{StaticResource MetroExpanderWithNormalCase}">
											<ItemsPresenter/>
										</Expander>
									</ControlTemplate>
								</Setter.Value>
							</Setter>
						</Style>
					</GroupStyle.ContainerStyle>
				</GroupStyle>
			</DataGrid.GroupStyle>
			<DataGrid.Columns>
				<DataGridCheckBoxColumn ElementStyle="{DynamicResource MetroDataGridCheckBox}" EditingElementStyle="{DynamicResource MetroDataGridCheckBox}" Header="Select" Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected, Mode=TwoWay,IsAsync=True,UpdateSourceTrigger=PropertyChanged}"/>
			</DataGrid.Columns>
			<!-- 				<DataGrid.Template>
					<ControlTemplate>
						<ScrollViewer  AttachedBehavior:ScrollAnimationBehavior.IsEnabled="True" AttachedBehavior:ScrollAnimationBehavior.TimeDuration="00:00:00.30" AttachedBehavior:ScrollAnimationBehavior.PointsToScroll="35" VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="true" VirtualizingPanel.VirtualizationMode="Standard" VirtualizingPanel.IsVirtualizing="True" >
							<ItemsPresenter  />
						</ScrollViewer>
					</ControlTemplate>
				</DataGrid.Template>	 -->
		</DataGrid>
		<Label Content="Filter" Foreground="#ffffff" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
		<TextBox Name="YoutubeFilterTextBox" Background="lightgray" HorizontalAlignment="Left" Height="26" Margin="78,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="172"/>
		<Button Name='Add_youtubeMedia_Button' FontSize="12" FontWeight="Bold" Margin="300,5,0,0" Height="25" Style="{StaticResource DetailButtonStyle}" VerticalAlignment="Top" HorizontalAlignment="Left" IsEnabled="true">
			<StackPanel Orientation="Horizontal">
				<iconPacks:PackIconMaterial Kind="Plus"
				                            Margin="4 4 2 4"
				                            Width="16"
				                            Height="16"
				                            VerticalAlignment="Center"/>
				<TextBlock Text="Add Youtube Video" Margin="2 2 2 2" VerticalAlignment="Center"/>
			</StackPanel>
		</Button>
		<StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Top">
			<!-- 		<Button Height="23" HorizontalAlignment="Left"  
		Name="Youtube_btnFirst" VerticalAlignment="Bottom" Width="40" 
		Content="&lt;&lt;" Opacity="0.75" Margin="5,0,0,0"/> -->
			<Button Height="23" VerticalAlignment="Top"
			        Name="Youtube_btnPrev" Width="40"
			        Opacity="0.75" Content="&lt;" Margin="5,5,0,0"/>
			<Label Name="Youtube_lblpageInformation" HorizontalContentAlignment="Center"
			       HorizontalAlignment="Left" Height="30" Width="60"
			       VerticalContentAlignment="Center" VerticalAlignment="Top"/>
			<Button Height="23" HorizontalAlignment="Right"
			        Name="Youtube_btnNext" VerticalAlignment="Top" Width="40"
			        Content="&gt;" Opacity="0.75" Margin="5,5,0,0"/>
			<!-- 		<Button Height="23" HorizontalAlignment="Right"  
		VerticalAlignment="Bottom" Width="40" Name="Youtube_btnLast" 
		 Opacity="0.75" Content="&gt;&gt;" Margin="5,0,0,0"/> -->
			<ComboBox Name="Youtube_cbNumberOfRecords" HorizontalAlignment="Left"
			          VerticalAlignment="Top" Width="120" SelectedIndex="0" Margin="5,5,0,0"
			          Opacity="0.75"/>
			<Label Name="Youtube_Table_Total_Media" Content="Total Media |" HorizontalAlignment="Right" FontSize="16" Margin="10,0,0,0" Foreground="#ffffff" VerticalAlignment="Top"/>
		</StackPanel>
	</Grid>
</TabItem>