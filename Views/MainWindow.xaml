<mah:MetroWindow
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:sys="clr-namespace:System;assembly=mscorlib"
                 xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                 xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.WPF4"
                 xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
                 xmlns:wf="clr-namespace:Microsoft.Web.WebView2.WinForms;assembly=Microsoft.Web.WebView2.WinForms"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:actions="clr-namespace:MahApps.Metro.Actions;assembly=MahApps.Metro"
                 xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                 xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                 xmlns:elementhost="clr-namespace:System.Windows.Forms.Integration.ElementHost;assembly=WindowsFormsIntegration"
                 xmlns:AttachedBehavior="clr-namespace:ScrollAnimateBehavior.AttachedBehaviors;assembly=AnimatedScrollViewer"
                 xmlns:WpfExtensions="clr-namespace:WpfExtensions;assembly=AnimatedScrollViewer"
                 xmlns:wpftk="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
                 xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
                 xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
                 xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows"
                 xmlns:dgx="clr-namespace:DataGridExtensions;assembly=DataGridExtensions"
                 xmlns:controlzEx="urn:controlzex"
				 xmlns:tb="http://www.hardcodet.net/taskbar"
                 xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"				 
                 Name='Window'
                 VerticalAlignment="Stretch"
                 WindowStartupLocation="CenterScreen"
                 WindowTransitionsEnabled="True"
                 BorderThickness="1"
                 ShowTitleBar="True"
                 ShowSystemMenu="True"
                 Background="#EA000000"
                 MinWidth="900"
				 Height="800"
				 Width="1400"
                 MinHeight="500"
                 MaxWidth="{x:Static SystemParameters.PrimaryScreenWidth}"
                 MaxHeight="{x:Static SystemParameters.PrimaryScreenHeight}"
                 ShowSystemMenuOnRightClick="True"
                 IsWindowDraggable="True"
                 UseNoneWindowStyle="true"
                 ShowIconOnTitleBar="false"
                 AllowsTransparency="false"
                 Title="{Binding Path=WindowTitle,IsAsync=True}"
                 LeftWindowCommandsOverlayBehavior="HiddenTitleBar"
                 RightWindowCommandsOverlayBehavior="HiddenTitleBar">
	<!--   <WindowChrome.WindowChrome>
    <WindowChrome NonClientFrameEdges="None" CornerRadius="3" />
  </WindowChrome.WindowChrome> -->
	<Window.TaskbarItemInfo>
		<TaskbarItemInfo/>
	</Window.TaskbarItemInfo>
	<!-- <Window.Clip>
    <RectangleGeometry Rect="0,0,1400,600" RadiusX="8" RadiusY="8"/>
</Window.Clip> -->
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.GridSplitter.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml"/>
				<!-- <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Dark.Blue.xaml"/> -->
				<ResourceDictionary Source="Views/Styles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	<mah:MetroWindow.LeftWindowCommands>
		<mah:WindowCommands Margin="0,0,0,0" Background="Transparent">
			<Button Name="LeftWindow_Button" Background="Transparent" Style="{StaticResource MenuButtonStyle}" BorderBrush="Transparent" Width="30" Height="30" VerticalAlignment="Top" Margin="0,0,0,0">
				<Menu Grid.Row="0"
				      Margin="0,0,0,0"
				      Background="Transparent"
				      Grid.ColumnSpan="1"
				      Name="Title_menu">
					<MenuItem Name="Title_menu_title" Width="30" Height="30" Background="Transparent">
						<MenuItem.Icon>
							<iconPacks:PackIconMaterial Name="Title_bar_Image" Kind="Menu" HorizontalAlignment="Center" VerticalAlignment="Top"/>
							<!-- <Image Name="Title_bar_Image" Source="{iconPacks:BootstrapIconsImage MusicPlayerFill, Brush={StaticResource MahApps.Brushes.Accent}}" RenderOptions.BitmapScalingMode="Fant" HorizontalAlignment="Center" VerticalAlignment="Top"/> -->
						</MenuItem.Icon>
						<MenuItem Header="Hide Title Bar" IsCheckable="True" IsChecked="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type mah:MetroWindow}}, Path=UseNoneWindowStyle}"/>
						<MenuItem Header="ShowInTaskbar"
						          IsCheckable="True"
						          IsChecked="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type mah:MetroWindow}}, Path=ShowInTaskbar}"/>
						<MenuItem Header="Topmost"
						          IsCheckable="True"
						          IsChecked="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type mah:MetroWindow}}, Path=Topmost}"/>
						<MenuItem Header="Ignore taskbar on maximize"
						          IsCheckable="True"
						          IsChecked="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type mah:MetroWindow}}, Path=IgnoreTaskbarOnMaximize}"/>
						<MenuItem Header="Change Theme"
						          Name="Change_Theme">
							<MenuItem Header="Dark"
							          Name="Theme_Dark">
							</MenuItem>
							<MenuItem Header="Light"
							          Name="Theme_Light">
							</MenuItem>
						</MenuItem>
						<Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Effect="{StaticResource DropShadow}" OpacityMask="{StaticResource SeparatorGradient}" Height="1" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
						<MenuItem Header="Submit Feedback/Issues"
						          Name="Submit_Feedback"/>
					</MenuItem>
				</Menu>
			</Button>
			<DockPanel Name="Window_Title_DockPanel" LastChildFill="False" Background="Transparent">
				<Label Name="Now_Playing_Label" Content="" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" Background="Transparent"/>
				<Label Name="Media_Length_Label" Content="Length: 00:00:00" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" Background="Transparent"/>
				<Separator Margin="10,0,0,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Height="20" Background="Transparent"/>
			</DockPanel>
		</mah:WindowCommands>
	</mah:MetroWindow.LeftWindowCommands>
	<Border>
	<Grid Name="RootGrid" HorizontalAlignment="stretch" VerticalAlignment="Stretch" Background="#FF000000">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="200*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Name="RootGrid_Column1" Width="200*"/>
			<ColumnDefinition Name="RootGrid_Column3" Width="200*"/>
		</Grid.ColumnDefinitions>
		<Grid HorizontalAlignment="stretch" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Stretch" Name="MainGrid" Background="{StaticResource MainGridBackGradient}">
			<Grid.RowDefinitions>
				<RowDefinition Name="MainGrid_Row1" Height="0*"/>
				<RowDefinition Name="MainGrid_Row2" Height="100*" MinHeight="50"/>
				<RowDefinition Name="MainGrid_Row3" Height="100*" MinHeight="50"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Name="MainGrid_Column1" Width="100*"/>
				<ColumnDefinition Name="MainGrid_Column2" Width="1*"/>
				<ColumnDefinition Name="MainGrid_Column3" Width="200*"/>
			</Grid.ColumnDefinitions>			
			<mah:TransitioningContentControl Name="MainGrid_Background_Image_Source_transition" Grid.ColumnSpan="3" Grid.RowSpan="3" CustomVisualStatesName="CustomTransition" Transition="Custom">
				<mah:TransitioningContentControl.CustomVisualStates>
					<VisualState x:Name="CustomTransition">
						<Storyboard>
							<DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
							                               Storyboard.TargetName="CurrentContentPresentationSite"
							                               Storyboard.TargetProperty="(UIElement.Opacity)">
								<SplineDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
								<SplineDoubleKeyFrame KeyTime="00:00:00.1" Value="0"/>
								<EasingDoubleKeyFrame KeyTime="00:00:01" Value="1">
									<EasingDoubleKeyFrame.EasingFunction>
										<SineEase/>
									</EasingDoubleKeyFrame.EasingFunction>
								</EasingDoubleKeyFrame>
							</DoubleAnimationUsingKeyFrames>
							<DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
							                               Storyboard.TargetName="PreviousContentPresentationSite"
							                               Storyboard.TargetProperty="(UIElement.Opacity)">
								<SplineDoubleKeyFrame KeyTime="00:00:00" Value="1"/>
								<SplineDoubleKeyFrame KeyTime="00:00:00.5" Value="0"/>
							</DoubleAnimationUsingKeyFrames>
						</Storyboard>
					</VisualState>
				</mah:TransitioningContentControl.CustomVisualStates>
				<Image Name="MainGrid_Background_Image_Source" Grid.ColumnSpan="4" Grid.RowSpan="4">
					<Image.Effect>
						<BlurEffect Radius="25"/>
					</Image.Effect>
				</Image>
			</mah:TransitioningContentControl>
			<mah:MetroTabControl Style="{DynamicResource MahApps.Styles.TabControl.Animated}" Effect="{StaticResource DropShadow}" Name="MainGrid_Top_TabControl" Margin="10,0,5,10" Background="transparent" VerticalAlignment="stretch" BorderThickness="0,0,0,0" BorderBrush="#050607" HorizontalAlignment="stretch" Grid.Row="1" Grid.ColumnSpan="3" mah:TabControlHelper.Underlined="SelectedTabitem" TabStripPlacement="Top">
				<TabControl.Resources>
					<Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource {x:Type TabItem}}">
						<Setter Property="mah:TabControlHelper.Underlined" Value="TabPanel"/>
						<Setter Property="mah:TabControlHelper.UnderlinePlacement" Value="Bottom"/>
						<Setter Property="mah:TabControlHelper.UnderlineBrush" Value="White"/>
					</Style>
				</TabControl.Resources>
				<TabItem Header="Media Player" BorderThickness="0,0,0,0" BorderBrush="Gray">
					<TabItem.HeaderTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Black">
								<iconPacks:PackIconBootstrapIcons Kind="MusicPlayerFill"
								                                  Margin="2 5 2 0"
								                                  Width="24"
								                                  Height="24"
								                                  Foreground="{DynamicResource MahApps.Brushes.Accent}"
								                                  VerticalAlignment="Top"/>
								<Label Name="MediaPlayer_Links_Label" Content="Media Player" FontWeight="Bold" Foreground="#FF7A7A7A" HorizontalAlignment="Center" FontSize="18"/>
							</StackPanel>
						</DataTemplate>
					</TabItem.HeaderTemplate>
					<Grid Name="MediaPlayer_Grid" Background="Transparent" VerticalAlignment="stretch" HorizontalAlignment="stretch" Opacity="1">
						<Grid.RowDefinitions>
							<RowDefinition Height="70"/>
							<RowDefinition Height="100*"/>
							<RowDefinition Height="200*"/>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Name="playlist_column" Width="200*">
								<ColumnDefinition.Style>
									<Style>
										<Style.Triggers>
											<DataTrigger Binding="{Binding ElementName=PlayQueueFlyout, Path=IsOpen}" Value="True">
												<DataTrigger.EnterActions>
													<BeginStoryboard>
														<Storyboard>
															<WpfExtensions:GridLengthAnimation Storyboard.TargetProperty="Width" From="0" To="100*" Duration="0:0:0.2"/>
														</Storyboard>
													</BeginStoryboard>
												</DataTrigger.EnterActions>
												<DataTrigger.ExitActions>
													<BeginStoryboard>
														<Storyboard>
															<WpfExtensions:GridLengthAnimation Storyboard.TargetProperty="Width" From="100*" To="0" Duration="0:0:0.2"/>
														</Storyboard>
													</BeginStoryboard>
												</DataTrigger.ExitActions>
											</DataTrigger>
										</Style.Triggers>
									</Style>
								</ColumnDefinition.Style>
							</ColumnDefinition>
							<ColumnDefinition Name="VideoView_Column" Width="200*"/>
							<ColumnDefinition Name="chat_column" Width="*" MaxWidth="400" >
								<ColumnDefinition.Style>
									<Style>
										<Style.Triggers>
											<DataTrigger Binding="{Binding ElementName=chat_WebView2, Path=Visibility}" Value="Visible">
												<DataTrigger.EnterActions>
													<BeginStoryboard>
														<Storyboard>
															<WpfExtensions:GridLengthAnimation Storyboard.TargetProperty="Width" From="0" To="75" Duration="0:0:0.2"/>
														</Storyboard>
													</BeginStoryboard>
												</DataTrigger.EnterActions>
												<DataTrigger.ExitActions>
													<BeginStoryboard>
														<Storyboard>
															<WpfExtensions:GridLengthAnimation Storyboard.TargetProperty="Width" From="75" To="0" Duration="0:0:0.2"/>
														</Storyboard>
													</BeginStoryboard>
												</DataTrigger.ExitActions>
											</DataTrigger>
										</Style.Triggers>
									</Style>
								</ColumnDefinition.Style>
							</ColumnDefinition>
						</Grid.ColumnDefinitions>
						<DockPanel Name="MediaPlayer_DockPanel" Grid.Row="0" VerticalAlignment="Top" Grid.ColumnSpan="4" HorizontalAlignment="Stretch">
							<ToolBar DockPanel.Dock="Top" Height="40" HorizontalAlignment="Stretch">
								<Button Name="Stop_Media" ToolTip="Stop Playback">
									<iconPacks:PackIconMaterial Kind="StopCircle" Width="16" Height="16"/>
								</Button>
								<Button Name="Pause_Media" ToolTip="Pause Playback">
									<iconPacks:PackIconMaterial Kind="PauseCircle" Width="16" Height="16"/>
								</Button>
								<Button Name="Restart_media" ToolTip="Restart Current Track">
									<iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16"/>
								</Button>
								<Button Name="Play_Media" ToolTip="Start Playback">
									<iconPacks:PackIconMaterial Kind="Play" Width="16" Height="16"/>
								</Button>
								<Button Name="Next_Media" ToolTip="Skip to Next Media">
									<iconPacks:PackIconMaterial Kind="SkipNext" Width="16" Height="16"/>
								</Button>
								<Separator Margin="10,0,0,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Height="20"/>
								<StackPanel Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Left">
									<Button Name='Shuffle_Playback_Button' ToolTip="Shuffle Playback" BorderThickness="0" Margin="10,0,0,0" Background="Transparent" Style="{StaticResource FilterButtonStyle}" IsEnabled="true">
										<iconPacks:PackIconMaterial Kind="ShuffleDisabled" Width="16" Height="16" Name="Shuffle_Icon"/>
									</Button>
								</StackPanel>
								<Separator Margin="10,0,0,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Height="20"/>
								<StackPanel Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Left">
									<Button Name="Volume_button" Style="{StaticResource FilterButtonStyle}" ToolTip="Volume" Margin="10,0,0,0" Background="Transparent" BorderThickness="0">
										<iconPacks:PackIconMaterial Name="Volume_icon" Kind="VolumeMedium" Width="16" Height="16"/>
									</Button>
									<Slider Minimum="0" Maximum="100" Name="Volume_Slider" VerticalAlignment="Top" DockPanel.Dock="Top" Background="Transparent" Margin="10,5,0,0" Width="200"/>
								</StackPanel>
								<Separator Margin="10,0,0,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Height="20"/>
								<StackPanel Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Left">
								<ToggleButton Name="Options_button" Style="{StaticResource ToggleButtonStyle}" ToolTip="Audio Options" Margin="10,0,0,0" Height="30" Width="30" IsEnabled="true" HorizontalAlignment="Left">
										<iconPacks:PackIconEvaIcons Name="Options_icon" Kind="OptionsOutline" Width="16" Height="16" Margin="0 2 0 0"/>										
									</ToggleButton>										
								</StackPanel>
								<Separator Margin="10,0,0,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Height="20"/>						
									<ToggleButton Name="PlayQueue_button" Style="{StaticResource ToggleButtonStyle}" ToolTip="Play Queue" Margin="10,0,0,0" Height="30" Width="30" IsEnabled="true" HorizontalAlignment="Left">
										<iconPacks:PackIconMaterial Name="PlayQueue_icon" Kind="AnimationPlayOutline" Width="16" Height="16" Margin="0 2 0 0"/>
									</ToggleButton>					
								<Separator Margin="10,0,0,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Height="20"/>
								<ToggleButton Name='Show_Playlists_Button' FontWeight="Bold" Height="30" Width="30" Margin="10,0,0,0" ToolTip="Playlists" Style="{StaticResource ToggleButtonStyle}" VerticalAlignment="Center" HorizontalAlignment="Left" IsEnabled="true" >
									<StackPanel Orientation="Horizontal">
										<iconPacks:PackIconMaterial Kind="PlaylistMusic"
																	Margin="0 2 0 0"
																	Width="16"
																	Height="16"
																	Name="Show_Playlists_Button_icon"
																	VerticalAlignment="Center"/>
										<!-- <TextBlock Text="Playlists" Margin="2 2 2 2" VerticalAlignment="Center"/> -->
									</StackPanel>
								</ToggleButton>		
								<Separator Margin="10,0,0,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Height="20"/>								
								<TextBox Name="Media_URL" Margin="10,0,0,0" MaxWidth="400" ToolTip="Media URL" BorderThickness="0" IsReadOnly="true" Background="Transparent" HorizontalAlignment="Left"/>
							</ToolBar>
						</DockPanel>
						<StackPanel Orientation="Horizontal" Grid.ColumnSpan="4" Grid.Row="0" Margin="10,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Right">
							<Button Name='Expand_Player_Button' ToolTip="Expand/Shrink Player" BorderThickness="0" Style="{StaticResource FilterButtonStyle}" IsEnabled="true" Background="Transparent">
								<iconPacks:PackIconCodicons Name='Expand_Player_Icon' Kind="ScreenFull" Width="16" Height="16"/>
							</Button>
							<Button Name='FullScreen_Player_Button' ToolTip="FullScreen Player" BorderThickness="0" Style="{StaticResource FilterButtonStyle}" IsEnabled="false" Background="Transparent">
								<iconPacks:PackIconModern Kind="NewWindow" ToolTip="FullScreen Player" Width="16" Height="16"/>
							</Button>
							<Separator Margin="0,0,0,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Height="20"/>
							<Button Name='Chat_View_Button' BorderThickness="0" DockPanel.Dock="Right" Style="{StaticResource FilterButtonStyle}" IsEnabled="true" Background="Transparent">
								<iconPacks:PackIconMaterial Kind="Chat" ToolTip="Chat View" Width="16" Height="16" Name="Chat_Icon"/>
							</Button>							
						</StackPanel>
						<Grid Name="PlayQueue_Flyout_Grid" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Margin="0,40,0,0" MinWidth="100">
							<mah:FlyoutsControl Name="PlayQueue_Flyout" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0,1,1,0" BorderBrush="Black">
								<mah:Flyout Header="Play Queue" Background="Transparent" HorizontalContentAlignment="Left" Position="Left" IsOpen="True" MinWidth="100" Name="PlayQueueFlyout" AnimateOpacity="True" CloseButtonVisibility="hidden" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TitleVisibility="Hidden" Theme="Adapt">
									<mah:Flyout.HeaderTemplate>
										<DataTemplate>
										</DataTemplate>
									</mah:Flyout.HeaderTemplate>
									<StackPanel Margin="0,0,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Stretch">
										<Button Name="PlayQueueFlyout_button" Style="{StaticResource FilterButtonStyle}" HorizontalAlignment="Left" ToolTip="Close Play Queue" Margin="0,3,0,0" Background="Transparent" VerticalAlignment="Top" BorderThickness="0">
											<iconPacks:PackIconMaterial Kind="ChevronLeftCircleOutline" Width="16" Height="16" Name="PlayQueueFlyout_Icon"/>
										</Button>
										<DataGrid Name="PlayQueue_TreeView" Margin="0,5,0,0" Background="Transparent" VerticalAlignment="stretch" HorizontalAlignment="stretch" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto"
										          SelectionUnit="FullRow" SelectionMode="Single" IsEnabled="True" ScrollViewer.CanContentScroll="false" VirtualizingStackPanel.ScrollUnit="Pixel" VirtualizingPanel.IsVirtualizingWhenGrouping="True" dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True" dd:DragDrop.DropHandler="{Binding}"
										          VirtualizingPanel.VirtualizationMode="Standard" AllowDrop="true" MaxWidth="{Binding ElementName=PlayQueue_Flyout, Path=ActualWidth}" ColumnWidth="Auto">
											<DataGrid.Resources>
												<Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
													<Setter Property="Background" Value="Transparent"/>
													<Setter Property="BorderThickness" Value="2"/>
												</Style>
												<Style TargetType="{x:Type TextBlock}" x:Key="WrapText">
													<Setter Property="TextWrapping" Value="Wrap"/>
												</Style>
												<Style TargetType="ScrollViewer">
													<Setter Property="AttachedBehavior:ScrollAnimationBehavior.IsEnabled" Value="True"/>
													<Setter Property="AttachedBehavior:ScrollAnimationBehavior.TimeDuration" Value="00:00:00.30"/>
													<Setter Property="AttachedBehavior:ScrollAnimationBehavior.PointsToScroll" Value="35"/>
												</Style>
												<Style TargetType="DataGridCell">
													<Style.Triggers>
														<Trigger Property="IsSelected"
														         Value="True">
															<Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}"/>
															<Setter Property="BorderThickness" Value="0"/>
															<Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.IdealForeground}"/>
															<Setter Property="BorderBrush" Value="Transparent"/>
														</Trigger>
													</Style.Triggers>
												</Style>
												<!-- 								<Style TargetType="{x:Type DataGridRow}">
									<Style.Resources>
										<SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
										<SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
										<SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
										<SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black"/>
									</Style.Resources>
								</Style> -->
												<!-- 	<SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/> -->
											</DataGrid.Resources>
											<DataGrid.RowStyle>
												<Style TargetType="DataGridRow">
													<Style.Triggers>
														<Trigger Property="IsSelected" Value="True">
															<Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}"/>
															<Setter Property="BorderThickness" Value="0"/>
															<Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.IdealForeground}"/>
															<Setter Property="BorderBrush" Value="Transparent"/>
														</Trigger>
													</Style.Triggers>
												</Style>
											</DataGrid.RowStyle>
											<DataGrid.ColumnHeaderStyle>
												<Style TargetType="{x:Type DataGridColumnHeader}">
													<Setter Property="FontWeight" Value="Bold"/>
													<Setter Property="FontSize" Value="14"/>
													<Setter Property="HorizontalAlignment" Value="Left"/>
													<Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.IdealForeground}"/>
													<Setter Property="Background" Value="Transparent"/>
													<Setter Property="HorizontalContentAlignment" Value="Center"/>
												</Style>
											</DataGrid.ColumnHeaderStyle>
											<DataGrid.Columns>
												<!-- 								<DataGridTextColumn Binding="{Binding Path=Header.Number,IsAsync=True}" Width="SizeToCells">
									<DataGridTextColumn.Header>
										<TextBlock FontWeight="Bold" Text="#"/>
									</DataGridTextColumn.Header>
								</DataGridTextColumn> -->
	
												<DataGridTemplateColumn Header="Play Queue" Width="SizeToCells" MinWidth="80" IsReadOnly="True">
													<DataGridTemplateColumn.CellTemplate>
														<DataTemplate>
															<!-- 																		<DoubleAnimation  Storyboard.TargetName="PlayIcon_Transform"  Storyboard.TargetProperty="(ScaleTransform.ScaleX)" From="0.95" To="1.2" Duration="0:0:0.5" RepeatBehavior="Forever" AutoReverse="True"/>  
																		<DoubleAnimation  Storyboard.TargetName="PlayIcon_Transform"  Storyboard.TargetProperty="(ScaleTransform.ScaleY)" From="0.95" To="1.2" Duration="0:0:0.5" RepeatBehavior="Forever" AutoReverse="True"/> -->
															<!--RoutedEvent="Button.Click" -->
